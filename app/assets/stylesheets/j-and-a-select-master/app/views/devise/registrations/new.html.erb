<div class="row user_setup">
  <div class="col-md-4 col-md-offset-4 col-sm-6 col-sm-offset-3 user_setup_content">
    <div class="row">
      <div class="col-md-10 col-md-offset-1">
      <h2><span class="fa fa-user-circle-o"></span> <%= t('dv-signup') %></h2>
      <%= simple_form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
        <div class="form-inputs">
          <%= f.input :email, :label => false, placeholder: t('dv-check-email'), error: t('dv-warn-email'), required: true, autofocus: true %>
          <%= f.input :nickname, :label => false, placeholder: t('dv-name'), error: t('dv-warn-name'), required: true %>
          <%= f.input :password, :label => false, placeholder: t('dv-set-pwd'), error: t('dv-warn-pwd-characters'), required: true, input_html: { maxlength: 16 } %>
          <%= f.input :password_confirmation, :label => false, placeholder: t('dv-confirm-pwd'), error: t('dv-warn-pwd'), required: true, input_html: { maxlength: 16 } %>
        </div>
        <div class="form-actions">
          <%= f.button :submit, t('signup'),class: "button" %>
        </div>
      <% end %>
      <hr />
        <div class="account">
          <%= link_to t('dv-account-signin'), new_session_path(resource_name) %><br />
        </div>
      </div>
    </div>
  </div>
</div>

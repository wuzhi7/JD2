<!-- /.头图 -->
<div class="body">
<div class="carousel">
  <img src="http://a3.qpic.cn/psb?/V13Obk462MXIb5/Etn.HKyf1hEinmt6rVjnj7z98b1REjFAksTueCMrYLA!/b/dBkBAAAAAAAA&bo=ygOQAQAAAAARB2g!&rf=viewer_4" alt="search" class="img-responsive" width="970" height="4">
</div>

<!-- /.排序 -->
<div class="orderList">
  <div class="orderList-item">
    <%= link_to("新品",products_path) %>
  </div>
  <div class="orderList-item">
    <li><%= link_to(content_tag(:i, '价格', class: ' fa fa-arrow-up'), products_path(:order => "by_upper_price")) %>
    </li>
  </div>
  <div class="orderList-item">
    <li><%= link_to(content_tag(:i, '价格', class: ' fa fa-arrow-down'), products_path(:order => "by_down_price")) %>
    </li>
  </div>
  <div class="orderList-item">
    <%= link_to("销量", products_path(:order => "by_down_sale_count")) %>
  </div>
</div>

<!-- /.商品列表 -->
<div class="row">
  <div class="productList">
  <% @products.each do |product| %>
    <div class="productList-item col-xs-6 col-md-3">

      <%= link_to product_path(product) do %>
        <% if product.image.present? %>
          <%= image_tag(product.image.thumb.url) %>
        <% else %>
          <%= image_tag("http://placehold.it/200x200&text=No Pic", class: "thumbnail") %>
        <% end %>
      <% end %>
      <p>
        <div class="row">
          <div class="col-md-6 productlist-item-a">
          ￥<%= product.price %>
          </div>
          <div class="col-md-6">
          <%= product.sale_count %>人购买
          </div>
        </div>
      </p>
      <p>
        <div class="row">
          <div class="col-md-12">
            描述: <%= product.description %>
          </div>

        </div>

      </p>
    </div>
  <% end %>
</div>
</div>
</div>


<div class="text-center">
  <%= will_paginate(@products, renderer: BootstrapPagination::Rails) %>
</div>

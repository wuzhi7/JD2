<h2> Product List </h2>
<div class="pull-right" style="padding-bottom: 20px;">
  <%= link_to("新增产品", new_admin_product_path, class: "btn btn-primary btn-sm") %>
</div>
<table class="table table-bordered table-striped custab">

  <thead>
    <tr>
      <th class="text-center" width="60">#</th>
      <th class="text-center" width="220">Product Pic</th>
      <th class="text-center" width="100">Name</th>
      <th class="text-center" width="100">Price</th>
      <th class="text-center" width="100">Quantity</th>
      <th class="text-center" width="120"> Options</th>
    </tr>
  </thead>
  <tbody>
    <% @products.each do |product| %>
      <tr>
        <td class="text-center align-middle">
          <%= product.id %>
        </td>
        <td class="text-center">
          <%= link_to product_path(product) do %>
            <% if product.image.present? %>
              <%= image_tag(product.image.thumb.url, class: "thumbnail") %>
            <% else %>
              <%= image_tag("http://placehold.it/200x200&text=No Pic", class: "thumbnail") %>
            <% end %>
          <% end %>
        </td>
        <td class="text-center">
          <%= product.title %>
        </td>
        <td class="text-center">
          <%= product.price %>
        </td>
        <td class="text-center">
          <%= product.quantity %>
        </td>
        <td class="text-center">
          <%= link_to edit_admin_product_path(product), class: "btn btn-xs btn-info" do %><i class="fa fa-pencil"></i><% end %>
          <%= link_to move_up_admin_product_path(product), method: :patch ,class: "btn btn-xs btn-success" do %><i class="fa fa-upload" aria-hidden="true"></i><% end %>
          <%= link_to move_down_admin_product_path(product), method: :patch, class: "btn btn-xs btn-warning" do %><i class="fa fa-download" aria-hidden="true"></i><% end %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>

<div class="text-center">
  <%= will_paginate(@products, renderer: BootstrapPagination::Rails) %>
</div>
